[
  {
    "label": "Quiz Title",
    "name": "title",
    "type": "text",
    "default": "Quiz Title"
  },
  {
    "label": "Welcome Text",
    "name": "welcome_text",
    "type": "text",
    "default": "Sit velit aliquip qui labore et nisi et occaecat dolor do velit proident. Velit aliqua adipisicing ut dolor. Eiusmod mollit pariatur occaecat excepteur veniam laboris do."
  },
  {
    "label": "HubSpot Form",
    "name": "form",
    "type": "form",
    "inline_help_text": "The form that will be submitted when the quiz is complete. This should be created first.",
    "visibility": {
      "hidden_subfields": {
        "message": true
      }
    }
  },
  {
    "label": "Questions",
    "name": "questions",
    "type": "group",
    "occurrence": {
      "default": 2
    },
    "children": [
      {
        "label": "Question Text",
        "name": "question_text",
        "type": "text",
        "default": "Type question here..."
      },
      {
        "label": "Contact Property Internal Name",
        "name": "internal_name",
        "type": "text",
        "inline_help_text": "The internal name for the Contact property the answer will be saved to. Example: number_of_employees"
      },
      {
        "label": "Answer Type",
        "name": "answer_type",
        "type": "choice",
        "choices": [
          ["buttons", "Buttons"],
          ["text", "Text"],
          ["textarea", "Multiline Text"],
          ["number", "Number"],
          ["email", "Email"]
        ]
      },
      {
        "label": "Allow Multiple Selections",
        "name": "allow_multiple",
        "type": "boolean",
        "visibility": {
          "controlling_field_path": "questions.answer_type",
          "controlling_value_regex": "buttons",
          "operator": "EQUAL"
        }
      },
      {
        "label": "Answers",
        "name": "answers",
        "type": "group",
        "occurrence": {
          "default": 2
        },
        "visibility": {
          "controlling_field_path": "questions.answer_type",
          "controlling_value_regex": "buttons",
          "operator": "EQUAL"
        },
        "children": [
          {
            "label": "Answer Text",
            "name": "answer_text",
            "type": "text",
            "default": "Answer"
          },
          {
            "label": "Scoring Category",
            "name": "scoring_category",
            "type": "choice",
            "choices": [
              ["category1", "Category 1"],
              ["category2", "Category 2"],
              ["category3", "Category 3"],
              ["category4", "Category 4"],
              ["category5", "Category 5"]
            ]
          },
          {
            "label": "Score",
            "name": "score",
            "type": "number",
            "default": 0
          },
          {
            "label": "Next Question",
            "name": "next_question",
            "type": "number",
            "inline_help_text": "Number of question that will follow this one if this answer is selected.",
            "visibility": {
              "controlling_field_path": "questions.allow_multiple",
              "controlling_value_regex": false,
              "operator": "EQUAL"
            }
          }
        ]
      }
    ]
  },
  {
    "label": "Contact Form",
    "name": "contact_form",
    "type": "group",
    "children": [
      {
        "label": "Fields",
        "name": "fields",
        "type": "group",
        "occurrence": {
          "sorting_label_field": "input_label",
          "default": 3
        },
        "children": [
          {
            "label": "Label",
            "name": "input_label",
            "type": "text"
          },
          {
            "label": "Contact Property Internal Name",
            "name": "internal_name",
            "type": "text",
            "inline_help_text": "The internal name for the Contact property the answer will be saved to. Example: firstname"
          },
          {
            "label": "Input Type",
            "name": "input_type",
            "type": "choice",
            "choices": [
              ["text", "Text"],
              ["textarea", "Multiline Text"],
              ["number", "Number"],
              ["email", "Email"]
            ],
            "default": "text"
          }
        ],
        "default": [
          {
            "input_label": "First Name",
            "internal_name": "firstname",
            "input_type": "text"
          },
          {
            "input_label": "Last Name",
            "internal_name": "lastname",
            "input_type": "text"
          },
          {
            "input_label": "Email",
            "internal_name": "email",
            "input_type": "email"
          }
        ]
      },
      {
        "label": "Button Text",
        "name": "button_text",
        "type": "text",
        "default": "See Results"
      }
    ]
  },
  {
    "label": "Results",
    "name": "results",
    "type": "group",
    "occurrence": {
      "default": 1,
      "max": 5
    },
    "children": [
      {
        "label": "Winning Category",
        "name": "winning_category",
        "type": "choice",
        "inline_help_text": "This result card will be shown if the selected category has the highest accumulated score.",
        "choices": [
          ["category1", "Category 1"],
          ["category2", "Category 2"],
          ["category3", "Category 3"],
          ["category4", "Category 4"],
          ["category5", "Category 5"]
        ]
      },
      {
        "label": "Title",
        "name": "title",
        "type": "text",
        "default": "Your Result"
      },
      {
        "label": "Text",
        "name": "text",
        "type": "richtext",
        "inline_help_text": "Calculated properties can be inserted here if needed",
        "default": "<p>Ipsum occaecat pariatur culpa est incididunt mollit. Velit occaecat veniam ut dolor officia sint qui non pariatur incididunt enim esse occaecat dolore. Aliquip culpa veniam ex incididunt do enim fugiat minim in consectetur ex sunt velit consectetur. Laborum nostrud labore aliqua ex cillum cillum dolor culpa ullamco. Pariatur velit excepteur amet duis exercitation qui veniam veniam eiusmod nulla.</p>"
      },
      {
        "label": "Button Text",
        "name": "button_text",
        "type": "text",
        "default": "Contact Us"
      },
      {
        "label": "Button Link",
        "name": "button_link",
        "type": "link"
      }
    ]
  },
  {
    "label": "Slide Transition",
    "name": "slide_transition",
    "type": "choice",
    "choices": [
      ["slide", "Slide"],
      ["fade", "Fade"]
    ],
    "default": "slide"
  }
]
